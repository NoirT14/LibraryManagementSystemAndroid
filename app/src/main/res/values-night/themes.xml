<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.Project_PRM392" parent="Theme.Material3.DayNight">
        <!-- Primary brand color for dark theme. -->
        <item name="colorPrimary">#64B5F6</item>
        <item name="colorPrimaryVariant">#42A5F5</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color for dark theme. -->
        <item name="colorSecondary">#FF8A65</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color for dark theme. -->
        <item name="android:statusBarColor">#42A5F5</item>

        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Surface colors for dark theme -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!-- NoActionBar theme for auth activities -->
    <style name="Theme.Project_PRM392.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>